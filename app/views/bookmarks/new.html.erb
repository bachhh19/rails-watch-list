<h1>Add a Movie to "<%= @list.name %>"</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, label: "Choose a movie", prompt: "Select a movie" %>
  <%= f.input :comment, label: "Comment about this movie" %>
  <%= f.button :submit, "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", list_path(@list), class: "btn btn-outline-secondary mt-2" %>
