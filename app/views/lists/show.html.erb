<div class="container">
  <h1 class="my-4"><%= @list.name %></h1>

  <% if @list.image_url.present? %>
    <img src="<%= @list.image_url %>" class="img-fluid rounded mb-4" alt="<%= @list.name %>">
  <% end %>

  <h2 class="mt-4">Movies in this list</h2>

  <% if @bookmarks.any? %>
    <ul class="list-group">
      <% @bookmarks.each do |bookmark| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div>
            <strong><%= bookmark.movie.title %></strong><br>
            <small><%= bookmark.comment %></small>
          </div>
          <%= link_to "ðŸ—‘", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No bookmarks yet. Add one below!</p>
  <% end %>
  <div>
    <%= link_to "Retour", lists_path, class: "btn btn-secondary mt-3" %>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary mt-3" %>
  </div>
</div>
